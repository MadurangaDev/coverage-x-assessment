version: "3.9"

services:
  db:
    image: mysql:8.0
    container_name: coveragex-db
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: to_do_coverage_x
      MYSQL_USER: app
      MYSQL_PASSWORD: app
    ports:
      - "3306:3306"
    volumes:
      - db_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 10
  back-end:
    build:
      context: ./back-end
      dockerfile: Dockerfile
    container_name: coveragex-backend
    environment:
      PORT: 3000
      DATABASE_URL: mysql://app:app@db:3306/coveragex
    depends_on:
      db:
        condition: service_healthy
    ports:
      - "3000:3000"
  front-end:
    build:
      context: ./front-end
      dockerfile: Dockerfile
    container_name: coveragex-frontend
    depends_on:
      - back-end
    ports:
      - "5173:80"
volumes:
  db_data:
